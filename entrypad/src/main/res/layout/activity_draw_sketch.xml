<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/layout_tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sketchPadView" />

    <com.stanny.sketchpad.view.SketchPadView
        android:id="@+id/sketchPadView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rootCl"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/iv_data_show"
        android:layout_width="45dp"
        android:layout_height="45dp"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rootCl"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_status"
        android:padding="11dp"
        android:visibility="gone"
        app:srcCompat="@drawable/main_show_data" />

    <LinearLayout
        android:id="@+id/rl_main_data"
        android:layout_width="320dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rootCl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_data_hide"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_data_status"
            android:padding="8dp"
            app:srcCompat="@drawable/main_hide_data" />

        <FrameLayout
            android:id="@+id/fm_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>