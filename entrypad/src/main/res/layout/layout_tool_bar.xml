<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/leftTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="12dp"
        android:visibility="gone"
        app:srcCompat="@drawable/icon_draw_reture" />



    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/leftTv"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/ivBack"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="72dp"
        android:layout_height="wrap_content"/>


    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/finishTv"
        android:layout_marginStart="16dp"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/leftTv"
        android:layout_width="72dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/toolBarTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/emptyText"
        android:textColor="@color/white"
        android:gravity="center"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"/>
    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/rightTv"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/right2Tv"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rightTv"/>
</androidx.constraintlayout.widget.ConstraintLayout>