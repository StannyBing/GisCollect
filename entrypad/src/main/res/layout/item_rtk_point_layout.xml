<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/itemRtkTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="参考点P0"/>

    <TextView
        android:id="@+id/rtkTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="界址点编辑"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_stroke_bg"/>




    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/rtkTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/gray_cc" />


    <com.gt.base.widget.CustomerEditText
        android:id="@+id/itemLatEt"
        style="@style/MyEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemLngEt"
        android:inputType="numberDecimal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="请输入经度"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:background="@drawable/shape_stroke_bg"
        android:drawableRight="@drawable/et_close" />

    <com.gt.base.widget.CustomerEditText
        android:id="@+id/itemLngEt"
        style="@style/MyEditText"
        app:layout_constraintLeft_toRightOf="@id/itemLatEt"
        app:layout_constraintRight_toLeftOf="@id/itemDistanceEt"
        android:inputType="numberDecimal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="请输入纬度"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:background="@drawable/shape_stroke_bg"
        android:drawableRight="@drawable/et_close" />



    <com.gt.base.widget.CustomerEditText
        android:id="@+id/itemDistanceEt"
        style="@style/MyEditText"
        app:layout_constraintLeft_toRightOf="@id/itemLngEt"
        app:layout_constraintRight_toRightOf="parent"
       android:inputType="numberDecimal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="请输入距离(m)"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:background="@drawable/shape_stroke_bg"
        android:drawableRight="@drawable/et_close" />
</androidx.constraintlayout.widget.ConstraintLayout>