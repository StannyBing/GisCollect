<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/operateLl"
                android:layout_above="@id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bd_ocr_close"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="请点击地图进行测量操作。点击关闭按钮或切换功能菜单即可退出测量状态"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="5dp"
                    android:background="@color/gray_cc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_survey_feature_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_mea_start"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:text="开始测量"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_survey_feature_undo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_collect_undo"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="上一步"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_survey_feature_redo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_collect_redo"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="下一步"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_survey_feature_clear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_collect_clear"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="清除"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tv_survey_feature_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_confirm"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="确定"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_survey_geometry_size"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/text_small_size" />
               <androidx.core.widget.NestedScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fillViewport="true">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">
                     <androidx.recyclerview.widget.RecyclerView
                         android:id="@+id/rv_survey_filed_list"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                     <androidx.recyclerview.widget.RecyclerView
                         android:id="@+id/rv_survey_file_list"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                 </LinearLayout>
               </androidx.core.widget.NestedScrollView>
            </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_alignParentBottom="true">
           <Button
               android:id="@+id/btnSubmit"
               style="@style/MyBtnStyle"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_margin="5dp"
               android:text="提交" />
           <Button
               android:id="@+id/btnSearch"
               style="@style/MyBtnStyle"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_margin="5dp"
               android:layout_alignParentBottom="true"
               android:text="搜索" />
       </LinearLayout>
    </RelativeLayout>
